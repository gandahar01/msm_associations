<style>
  table {
    border-collapse: collapse;
    }
  th, td {
    border: 1px solid orange;
    padding: 10px;
    text-align: left;  
    vertical-align: top;
  }
</style>

<div class="page-header">
  <h1>
    Directors
    <a href="/directors/new" class="btn btn-lg btn-success">New Director</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Dob</th>
        <th>Bio</th>
        <th>Image url</th>
        <th>Actions</th>
      </tr>

      <% @directors.each do |director| %>
      <tr>
        <td><%= director.name %></td>
        <td><%= director.dob %></td>
        <td><%= director.bio %></td>
        <td><%= director.image_url %></td>
        <td>
          <a href="/directors/<%= director.id %>" class="btn btn-primary">Show</a>
          <a href="/directors/<%= director.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_director/<%= director.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
