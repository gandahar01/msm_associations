<style>
  table {
    border-collapse: collapse;
    }
  th, td {
    border: 1px solid orange;
    padding: 10px;
    text-align: left;  
    vertical-align: top;
  }
</style>

<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>
 
      <dt>Bio</dt>
      <dd><%= truncate(@actor.bio) %></dd>
  

      <dt>Image url</dt>
      <dd><img src="<%= @actor.image_url %>" width="100"></dd>
      
      <dt>Number of movies</dt>
      <dd><%= @actor.movies.count %></dd>
      
      <dt>Filmography</dt>
      <dd>
          <ul class="list-group">
                  <% @actor.characters.each do |character| %>
                  <li class="list-group-item">
                    <a href="/movies/<%= character.movie_id %>">
               <%= character.movie.title %>
             </a>
           (<%= character.name %>)
            </li>
          <% end %>
          </ul>
          <li class="list-group-item">
             <form action="/create_character" method="post">
               <!-- Hidden input for authenticity token to protect from forgery -->
               <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
 

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>
        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @character.name %>">
      </div>
       </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
